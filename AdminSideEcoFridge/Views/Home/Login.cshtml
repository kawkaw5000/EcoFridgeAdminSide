@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://fonts.cdnfonts.com/css/sf-pro-display" rel="stylesheet">
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <main>
        <div class="container">
            <div class="login-img-container">
                <img src="/images/LoginImg/Humba-Img.svg" alt="" class="humba-img">
            </div>
            <div class="login-input-container">
                <div class="welcome-content">
                    Welcome Back
                </div>
                <form method="post" asp-action="Login">
                    <div class="user-input">
                        <input type="text" class="username" name="username" placeholder="Username" required>
                    </div>
                    <div class="pass-input">
                        <input type="password" class="password" id="password" name="password" placeholder="Password" required>
                        <span class="toggle-password" onclick="togglePasswordVisibility()">
                            <img class="img-eye" src="/images/LoginImg/eye-close-up-svgrepo-com.svg" alt="Show/Hide" id="eye-icon">
                        </span>
                    </div>
                    <div class="login">
                        <button type="submit" class="login-btn">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <script src="~/js/login.js"></script>
</body>
</html>
